<Window x:Class="Y1_ingester.Views.MetadataEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Y1_ingester.Views"
        mc:Ignorable="d"
        Title="MetadataEditorWindow" Height="300" Width="800">
    <Border Padding="15" Background="#f8f8f8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Margin="0,0,15,0"
                    BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
                <Image Source="{Binding AlbumArt}" Stretch="Uniform" />
            </Border>

            <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Margin="0,0,0,10">
                <TextBlock Text="Title:" FontWeight="Bold"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Artist:" FontWeight="Bold"/>
                <TextBox Text="{Binding Artist, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Album:" FontWeight="Bold"/>
                <TextBox Text="{Binding Album, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                <TextBlock Text="Year:" FontWeight="Bold"/>
                <TextBox Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" Width="80"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                        Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Save" Width="100" Margin="5" IsDefault="True" Click="Save_Click" />
                <Button Content="Cancel" Width="100" Margin="5" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
