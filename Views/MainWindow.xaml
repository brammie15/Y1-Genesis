<Window x:Class="Y1_ingester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Y1_ingester"
        xmlns:viewModels="clr-namespace:Y1_ingester.ViewModels"
        mc:Ignorable="d"
        Title="Y1-Genesis - Brammie15" Height="550" Width="950">

    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>
    <DockPanel>
        <!-- Top Toolbar -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Settings" />
            <Button Content="Refresh" Command="{Binding RefreshSongsCommand}" />
            <Button Content="Rescan Devices" Command="{Binding RefreshDevicesCommand}" />
            <Button Content="Help" />
        </ToolBar>

        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Left Side: Song List -->
            <ScrollViewer Grid.Column="0">
                <ItemsControl ItemsSource="{Binding Songs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5" Padding="4" BorderThickness="2" CornerRadius="5" BorderBrush="{Binding BorderColor}">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="{Binding AlbumArt}" Width="120" Height="100" Margin="5"/>

                                    <StackPanel Margin="5" Width="300">
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold" TextWrapping="WrapWithOverflow"/>
                                        <TextBlock Text="{Binding Artist}" FontStyle="Italic" TextWrapping="WrapWithOverflow"/>
                                        <TextBlock Text="{Binding Album}" TextWrapping="WrapWithOverflow"/>
                                        <TextBlock Text="{Binding Year}"/>
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                    Command="{Binding DataContext.DeleteSongCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Width="32" Height="32"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    ToolTip="Delete Song"
                                    Background="Transparent"
                                    BorderBrush="{x:Null}"
                                    Padding="0">    
                                        <TextBlock Text="🗑" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Button>

                                    <Button Grid.Column="2"
                                    Command="{Binding DataContext.EditSongCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Width="32" Height="32"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center"
                                    ToolTip="Edit Song"
                                    Background="Transparent"
                                    BorderBrush="{x:Null}"
                                    Padding="0">                    
                                        <TextBlock Text="✏" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
                <TextBlock Text="Upload Options" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                <TextBlock Text="Select Drive:"/>
                <ComboBox Name="DriveSelector" Margin="0,0,0,10" ItemsSource="{Binding RockboxDrives}" SelectedValue="{Binding SelectedRockboxDrive}">
                </ComboBox>

                <TextBlock Text="Add Song from URL:"/>
                <TextBox Name="UrlInput" Width="200" Margin="0,10,0,10" Text="{Binding UrlText, UpdateSourceTrigger=PropertyChanged}"/>
                
                <Button Content="Download and Add" Width="150" Margin="0,0,0,20" Command="{Binding DownloadUrlCommand}" CommandParameter="{Binding ElementName=UrlInput, Path=Text}"/>

                <TextBlock Text="Upload Selected Songs:" Margin="0,10,0,10"/>
                <Button Content="Upload To Device" Width="150" IsEnabled="{Binding IsRockBoxConnected}" Command="{Binding UploadSongsCommand}"/>

                <ListBox ItemsSource="{Binding QueuedSongs}" Margin="0,10,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Title}" Width="200"/>
                                <TextBlock Text="{Binding Status}" Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
