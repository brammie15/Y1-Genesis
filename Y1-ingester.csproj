<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>Y1_ingester</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>y1-logo.ico</ApplicationIcon>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Themes\Images\bg_cute.jpg" />
    <None Remove="Themes\Images\bg_tile.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="y1-logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="taglib-sharp-netstandard2.0" Version="2.1.0" />
    <PackageReference Include="YoutubeDLSharp" Version="1.1.2" />
    <PackageReference Include="YouTubeMusicAPI" Version="3.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Themes\Images\bg_cute.jpg" />
    <Resource Include="Themes\Images\bg_tile.jpg" />
  </ItemGroup>

</Project>
